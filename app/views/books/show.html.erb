<div class="row">

	<div class="col-md-4">
	    <%= image_tag @book.book_img.url(:original), class: "book-show" %>
	</div>

	<div class="col-md-8">
		<h2><%= @book.title %> </h2>
		<h3>Author: <%= @book.author %> </h3>
		<h2>Average Rating</h2>
		<div class="average-review-rating" data-score=<%= @average_review %>></div>
		<span>Based on <%= @book.reviews.count %> reviews</span>
	    <h4><%= @book.description %> </h4>
	</div>

</div>

<div class="row">
	<!-- Reviews section -->
	<%= render @book.reviews %>
	<br>
	
	<div class="col-md-4">
		<%= link_to "Add Review", new_book_review_path(@book) %>
	</div>

</div>

<%= link_to "Back", root_path %>

<% if user_signed_in? %>
	<% if @book.user_id == current_user.id %>
		<%= link_to "Edit", edit_book_path(@book)%>
		<%= link_to "Delete", book_path(@book), method: :delete, data: { confirm: "Are you sure?" }%>
	<% end %>
<% end %>

<script>
	$('.review-rating').raty({
		readOnly: true,
		score: function() {
			return $(this).attr('data-score');
		},
        path: '/assets/'
	});
</script>

<script>
	$('.average-review-rating').raty({
		readOnly: true,
		path: '/assets/',
		score: function(){
			return $(this).attr('data-score')
		}
	});
</script>